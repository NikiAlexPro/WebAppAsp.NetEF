@page
@model WebAppCustom.Pages.ShoppingModel
@{
    ViewData["Title"] = "Shopping";
}

<p>Test Shopping</p>

<form method="post" data-ajax="true" data-ajax-method="post">
    <input type="submit" value="Add Order" class="btn btn-primary" />


<table class="table table-hover">
    <thead>
        <tr>
            @*<th>Имя</th>
            <th>Фамилия</th>
            <th>Отчество</th>*@
            <th>Дата заказа</th>
            <th>Сумма заказа</th>
            <th>Изображение чека</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.shops is null)
        {
            <tr>Data is null</tr>
        }
        else
        {
            @*var result = Model.listClients.Join(Model.shops,
                    c => c.ID,
                    s => s.Client_id,
                    (c, s) => new
                    {
                        ID = c.ID,
                        FirstName = c.FirstName,
                        LastName = c.LastName,
                        Patronymic = c.Patronymic,
                        DateShop = s.DateShop,
                        SumShop = s.SumShop,
                        PictureShop = s.PictureShop
                    });*@

            @foreach (var client in Model.shops)
            {
                <tr>
                    @*<td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Patronymic</td>*@
                    @*<td>@client.Email</td>
                    <td>@client.Phone</td>
                    <td>@client.DateOfBirth</td>*@
                    <td>@client.DateShop</td>
                    <td>@client.SumShop</td>
                    @*<td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">@client.PictureShop</button></td>*@
                    
                    @*"data:image/jpeg;base64,@(Convert.ToBase64String(client.PictureShop))"*@
                    <td><img class="image" style="width:30%;cursor:zoom-in" src="@ViewData["Image"]"></img></td>
                    
                    @*<td>
                    <a class="first" title="Цветы на фоне неба" href="images/test.jpg"><img src="/images/test.jpg" border="0"></a>
                    </td>*@

                    <td>
                        @*<a class="btn btn-danger" asp-page-handler=DeleteOrder asp-route-id=@client.Client_Прикid>Delete</a>*@
                        <input type="submit" asp-page-handler=DeleteOrder value="Delete" class="btn btn-danger" asp-route-id=@client.ID/>
                        @*detail*@
                    </td>
                </tr>
            }
        }


                        <!-- Модальное окно изображение -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" role="dialog">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Заголовок модального окна</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
              </div>
              <div class="modal-body">
                @*<img src="data:image;base64,@System.Convert.ToBase64String(img.ImageItem)" class="img-tests"/>*@
                
                <img src="" class="imagepreview">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary">Сохранить изменения</button>
              </div>
            </div>
          </div>
        </div>
    </tbody>
</table>
</form>

@section Scripts {
    <script type="text/javascript">
 
        $(function() {
                        $('.image').on('click', function() {
                            var a = $('.image').attr('src');
